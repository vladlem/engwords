<div class="container form-signin">
  <h2 class="form-signin-heading">Please Sing In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, 'Email Address', class: "sr-only" %><br />
      <%= f.email_field :email, placeholder: 'Email Address', autofocus: true, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :password, 'Password', class: "sr-only" %><br />
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Sing In", class: 'btn btn-lg btn-primary btn-block' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
